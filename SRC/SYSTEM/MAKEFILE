cpp_root 		= system.cpp services.cpp logger.cpp
cpp_types		= list.cpp ringbuff.cpp
cpp_services 	= services\mem.cpp services\string.cpp services\datetime.cpp

all: compile clean

compile: 	.SYMBOLIC
	$(COMPILER_CMD) $(cpp_root) $(cpp_types) $(cpp_services)

clean: 		.SYMBOLIC
	@echo cleaning directory
	@if exist *.obj @del /f /q *.obj
	@if exist *.lnk @del /f /q *.lnk
	@if exist *.err @del /f /q *.err